$fontSize = 16px
$theme = #ff3300

@keyframes spin
  from
    transform rotate(0)
  to
    transform rotate(360deg)

@keyframes appear
  from
    opacity 0
  to
    opacity 1

.mplayer *
  box-sizing border-box

.mplayer svg, .mplayer-time-inner, .mplayer-icon
  display block

.mplayer svg
  fill #000000

.mplayer
  color #000000
  width 100%
  position relative
  display flex
  flex-flow column
  font-size $fontSize
  line-height 1
  background-color #333333
  border-radius 1.5em
  user-select none

.mplayer-body
  display flex
  flex-flow row
  margin 1em
  height 14em

.mplayer-pic, .mplayer-info
  flex-basis 12em

.mplayer-pic
  height 12em
  min-width @height
  margin 1em
  border-radius 1em
  cursor pointer
  flex-grow 0
  background-size cover
  position relative
  border 0.5em solid #ffffffcc
  transition border-color 0.2s
  &:hover
    border-color #ffffff
    .mplayer-button
      opacity 1

.mplayer-button
  position absolute
  right 0.5em
  bottom @right
  width 25%
  border-radius 50%
  opacity 0.66
  transition opacity 0.2s, right 0.2s, bottom 0.2s, width 0.2s, border 0.2s
  filter drop-shadow(0 0 0.25em)
  svg
    fill #ffffff

.mplayer-pause
  right 25%
  bottom @right
  width 50%
  border 0.5em solid #ffffff

.mplayer-info
  margin 1em
  padding 1em
  max-width calc(100% - 16em)
  border-radius 1em
  height 12em
  background-color #ffffff
  display flex
  flex-flow column
  flex-grow 1

.mplayer-music
  line-height 2
  height 3em
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  user-select text

.mplayer-controller
  height 7em

.mplayer-title
  font-size 150%
  display inline-block
  max-width 66%
  overflow hidden
  text-overflow ellipsis
  vertical-align bottom

.mplayer-author
  color #999999
  line-height 2.5

.mplayer-bar-wrap, .mplayer-bar, .mplayer-loaded, .mplayer-played
  height 1em
  border-radius 0.5em

.mplayer-bar-wrap
  margin 0.5em 0
  cursor pointer

.mplayer-bar
  background-color #eeeeee
  position relative
  &:hover
    .mplayer-thumb
      background-color #000000 !important

.mplayer-loaded
  background-color #dddddd
  transition width 0.2s

.mplayer-played
  background-color $theme
  position absolute
  top 0
  left 0
  min-width 1em
  max-width 100%

.mplayer-thumb
  float right
  display block
  width 1em
  height 1em
  border-radius 0.5em
  transition background-color 0.2s
  transform scale(1.5) !important
  .mplayer-loading-icon
    display none
    animation spin 2s infinite linear
  .mplayer-loading-show
    display block
  svg
    fill #ffffff

.mplayer-time-inner
  text-align right
  margin 0.75em 0.25em

.mplayer-icon:not(.mplayer-icon-volume-down)
  height 3em
  width @height
  cursor pointer
  padding 0.5em
  border-radius 0.5em
  border 2px solid transparent
  transition border-color 0.2s, box-shadow 0.2s
  &:hover
    border-color #000000
  &:active
    box-shadow inset 0 0 0.25em

.mplayer-icon:not([type='button'])
  float left
  margin-right 1.25em
  transform scale(1.35) translate3D(0.5em, -0.5em, 0) !important
  border-radius 50%

.mplayer-icon[type='button']:not(.mplayer-icon-volume-down), .mplayer-volume-wrap
  float right
  margin-left 0.25em
  &.mplayer-icon-transparent
    opacity 0.5
  &:hover
    opacity 1

.mplayer-icon-volume-down
  height 3em
  width @height
  cursor pointer
  padding 0.5em
  border-radius 0 0.5em 0.5em 0

.mplayer-volume-wrap
  position relative
  &:hover
    .mplayer-icon-volume-down
      background-color #000000
      svg
        fill #ffffff
    .mplayer-volume-bar-wrap
      width 13.25em
      box-shadow inset 0 0 0 2px

.mplayer-volume-bar-wrap
  position absolute
  top 0
  right calc(100% - 0.25em)
  width 0
  height 100%
  background-color #ffffff
  border-radius 0.5em 0 0 0.5em
  transition width 0.2s
  cursor pointer

.mplayer-volume-bar
  height 100%
  position relative
  margin 0 1em

.mplayer-volume
  height 50%
  top 25%
  position absolute
  border-radius 0.25em
  min-width 0
  max-width 100%

.mplayer-lrc, .mplayer-list
  margin 0 2em 2em
  border-radius 1em
  background-color #ffffff
  overflow hidden
  transition height 0.6s, margin-bottom 0.6s, border-radius 0.6s

.mplayer-list-hide, .mplayer-lrc-hide
  margin-bottom 0
  height 0 !important
  min-height 0 !important
  border-radius 0

.mplayer-lrc
  height calc(((80vh - 20em) / 3))
  min-height 5.75em
  text-align center
  position relative
  &:before, &:after
    content ''
    position absolute
    width 100%
    height 0.5em
    left 0
    z-index 1
  &:before
    top 0
    background linear-gradient(0deg, hsla(0, 0%, 100%, 0) 0, hsla(0, 0%, 100%, 0.8))
  &:after
    bottom 0
    background linear-gradient(180deg, hsla(0, 0%, 100%, 0) 0, hsla(0, 0%, 100%, 0.8))

.mplayer-lrc-score
  position absolute
  width calc(100% - 3em)
  margin 0 1.5em
  height 0
  left 0
  top 56px
  z-index 1
  background-color #ff3300
  transition height 0.6s
  &.mplayer-lrc-score-show
    height 2px

.mplayer-lrc-empty
  line-height calc(((80vh - 20em) / 3))

.mplayer-lrc-contents
  user-select text
  transition transform 0.6s
  > p
    margin 0
    padding-top 8px
    white-space nowrap
    overflow hidden
    line-height 1.25
    transition font-size 0.6s, font-weight 0.6s
    color #666666

.mplayer-lrc-current
  font-weight bold
  font-size 32px
  line-height 1.5 !important
  color #000000 !important

.mplayer-list
  min-height calc((80vh - 20em) / 3 * 2)
  user-select text

.mplayer-list-empty
  line-height calc((80vh - 20em) / 3 * 2)
  text-align center

.mplayer-list-item
  margin 1.75em 1.5em
  padding 1em 2em 1em 1em
  border-radius 0.5em
  border 2px dashed #000000
  cursor pointer
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  position relative
  transition background-color 0.2s
  animation appear 0.6s
  &:hover
    background-color #f1f2f3
  &:active
    background-color #e1e2e3
  &.mplayer-list-current
    border-style solid
    background-color #ffffff
    font-weight bold
    .mplayer-list-author
      color #000000
    .mplayer-list-cur
      width 0.5em

.mplayer-list-cur
  position absolute
  left 0
  top 0
  display block
  width 0
  height 100%
  background-color $theme
  transition width 0.2s

.mplayer-list-index, .mplayer-list-title
  display inline-block
  float left
  margin-right 1em

.mplayer-list-index
  width 2em
  text-align right

.mplayer-list-title
  width 66%
  overflow hidden
  text-overflow ellipsis

.mplayer-list-author
  color #999999
